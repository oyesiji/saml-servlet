<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>Hello</display-name>


  <filter>
    	<filter-name>customFilter</filter-name>
    	<filter-class>gov.fiscal.treasury.CustomSSLFilter</filter-class>	
    </filter>
    <filter-mapping>
    	<filter-name>customFilter</filter-name>
    	<url-pattern>/*</url-pattern>
    </filter-mapping>

 <filter>
    	<filter-name>testFilter</filter-name>
    	<filter-class>bonjour.saml.TestFilter</filter-class>	
    </filter>
    <filter-mapping>
    	<filter-name>testFilter</filter-name>
    	<url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>samlLoginServlet</servlet-name>
        <servlet-class>bonjour.saml.SamlLogin</servlet-class>
        <init-param>
            <param-name>saml.config</param-name>
            <param-value>classpath:/google.properties</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>samlLoginServlet</servlet-name>
        <url-pattern>/saml/login</url-pattern>
    </servlet-mapping>
    
    
    
     <servlet>
        <servlet-name>testingServlet</servlet-name>
        <servlet-class>bonjour.saml.TestingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>testingServlet</servlet-name>
        <url-pattern>/saml/testing</url-pattern>
    </servlet-mapping>
    
    
    


    <servlet>
        <servlet-name>samlSSOServlet</servlet-name>
        <servlet-class>bonjour.saml.SamlSSO</servlet-class>
        <init-param>
            <param-name>saml.config</param-name>
            <param-value>classpath:/google.properties</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>samlSSOServlet</servlet-name>
        <url-pattern>/saml/SSO</url-pattern>
    </servlet-mapping>
    
  
</web-app>
